       for (int fila=0; fila <planilla1.length; fila++) {
            for (int col=0; col < planilla1[fila].length; col++) {
    System.out.print (planilla1[fila][col] + "\t");
  }
    System.out.println();
    
  }
        return planilla1;
       
    }    
    
